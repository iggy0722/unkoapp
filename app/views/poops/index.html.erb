<br>
<div class= 'show'>
  <%= @human.name %>のうんち日記
<br>
<div class="col-md-8">
<%= month_calendar events: @poops do |date, poops| %>
  <div class=day_font>
    <%= date.day %>
  </div>

  <% poops.each do |poop| %>
    <% if poop.state.id == 2 %>
      <%= image_tag "普通.png", size: "50x50",class: 'image' %>
    <% elsif poop.state.id == 3 %>
      <%= image_tag "コロコロ.png", size: "50x50",class: 'image'%>
    <% elsif poop.state.id == 4 %>
      <%= image_tag "カチカチ.png", size: "50x50",class: 'image'%>
    <% elsif poop.state.id == 5 %>
      <%= image_tag "ちょいかた.png", size: "50x50",class: 'image'%>
    <% elsif poop.state.id == 6 %>
      <%= image_tag "dorodoro.png", size: "50x50",class: 'image'%>
    <% elsif poop.state.id == 7 %>
      <%= image_tag "bitya.png", size: "50x50",class: 'image'%>
    <% elsif poop.state.id == 8 %>
      <%= image_tag "不消化.png", size: "50x50",class: 'image'%>
    <% end %>
  <% end %>
<% end %>
</div>
